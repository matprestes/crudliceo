---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Salas">
  <div class="max-w-4xl mx-auto">
    <h1 class="text-4xl font-bold text-primary mb-6">Salas</h1>
    
    <div class="grid md:grid-cols-3 gap-6">
      <div class="bg-white shadow-lg rounded-lg overflow-hidden">
        <div class="h-48 bg-gray-100">
          <img 
            src="https://images.unsplash.com/photo-1516321318423-f06f85e504b3?ixlib=rb-4.0.3"
            alt="Sala Informática"
            class="w-full h-full object-cover"
          />
        </div>
        <div class="p-6">
          <h2 class="text-2xl font-semibold mb-4">Sala Informática</h2>
          <ul class="space-y-2 text-gray-600">
            <li>• 20 computadoras con internet</li>
            <li>• Software educativo actualizado</li>
            <li>• Proyector multimedia</li>
            <li>• Soporte técnico disponible</li>
          </ul>
        </div>
      </div>

      <div class="bg-white shadow-lg rounded-lg overflow-hidden">
        <div class="h-48 bg-gray-100">
          <img 
            src="https://images.unsplash.com/photo-1532094349884-543bc11b234d?ixlib=rb-4.0.3"
            alt="Laboratorios"
            class="w-full h-full object-cover"
          />
        </div>
        <div class="p-6">
          <h2 class="text-2xl font-semibold mb-4">Laboratorios</h2>
          <ul class="space-y-2 text-gray-600">
            <li>• Laboratorio de Química</li>
            <li>• Laboratorio de Física</li>
            <li>• Laboratorio de Biología</li>
            <li>• Equipamiento especializado</li>
          </ul>
        </div>
      </div>

      <div class="bg-white shadow-lg rounded-lg overflow-hidden">
        <div class="h-48 bg-gray-100">
          <img 
            src="https://images.unsplash.com/photo-1521587760476-6c12a4b040da?ixlib=rb-4.0.3"
            alt="Biblioteca"
            class="w-full h-full object-cover"
          />
        </div>
        <div class="p-6">
          <h2 class="text-2xl font-semibold mb-4">Biblioteca</h2>
          <ul class="space-y-2 text-gray-600">
            <li>• Extensa colección bibliográfica</li>
            <li>• Sala de lectura silenciosa</li>
            <li>• Área de estudio grupal</li>
            <li>• Recursos digitales</li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</Layout>