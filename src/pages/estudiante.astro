---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Estudiante">
  <div class="max-w-4xl mx-auto">
    <h1 class="text-4xl font-bold text-primary mb-6">Portal del Estudiante</h1>
    <div class="grid md:grid-cols-2 gap-6">
      <div class="bg-white shadow-lg rounded-lg p-6">
        <h2 class="text-2xl font-semibold mb-4">Recursos Académicos</h2>
        <ul class="space-y-2">
          <li>
            <a href="#" class="text-primary hover:text-secondary">Horario de Clases</a>
          </li>
          <li>
            <a href="#" class="text-primary hover:text-secondary">Calendario Académico</a>
          </li>
          <li>
            <a href="#" class="text-primary hover:text-secondary">Material de Estudio</a>
          </li>
        </ul>
      </div>
      <div class="bg-white shadow-lg rounded-lg p-6">
        <h2 class="text-2xl font-semibold mb-4">Actividades Extracurriculares</h2>
        <ul class="space-y-2">
          <li>
            <a href="#" class="text-primary hover:text-secondary">Deportes</a>
          </li>
          <li>
            <a href="#" class="text-primary hover:text-secondary">Talleres Artísticos</a>
          </li>
          <li>
            <a href="#" class="text-primary hover:text-secondary">Clubes Académicos</a>
          </li>
        </ul>
      </div>
    </div>
  </div>
</Layout>